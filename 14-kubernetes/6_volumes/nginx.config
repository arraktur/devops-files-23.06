user  nginx;
worker_processes  auto;

error_log  /var/log/nginx/error.log notice;
pid        /var/run/nginx.pid;


events {
    worker_connections  1024;
}


http {
    sendfile on;

    server {
        listen 8080;
        
        location / {
            proxy_pass         http://static;
            proxy_redirect     off;
        }
    }

    server {
        listen 8081;
        
        location / {
            proxy_pass         http://dynamic;
            proxy_redirect     off;
        }
    }

}